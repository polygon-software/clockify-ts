{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": false,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "dist/esm",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "src/**/*.test.ts",
  ],
  "include": [
    "src"
  ]
}
